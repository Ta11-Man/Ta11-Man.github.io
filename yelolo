<!--A third party validator for reputations of renters and rentees.
Created by Gabriel Halstead, first edit on September 9th, 2024.

-->

<DOCTYPE html>

 <html>


  <head>

    <title>Yelelo</title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Animated Image and Floating Text Reveal</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            background-color: 543300ff;
            overflow: hidden;
        }
        #image-container {
            transition: all 2s ease-in-out;
        }
        #text-container {
            margin-top: 20px;
            font-size: 24px;
            font-family: Arial, sans-serif;
            position: relative;
        }
        .letter {
            display: inline-block;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
        }
        .space {
    		display: inline-block;
    		width: 0.3em;
		}
    </style>

  </head>


<div id="image-container">
        <img src="yelolo.svg" alt="Yelelo" id="main-image" style="max-width: 100vw; max-height: 100vh;">
    </div>
    <div id="text-container"></div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const image = document.getElementById('main-image');
            const imageContainer = document.getElementById('image-container');
            const textContainer = document.getElementById('text-container');
            const text = "A new age for reputations.";

            // Start with the image at full size
            image.style.width = '100vw';
            image.style.height = '100vh';

            // After a short delay, shrink the image
            setTimeout(() => {
                image.style.width = '500px';
                image.style.height = 'auto';
                
                // Start revealing the text
                setTimeout(revealText, 1000);
            }, 1000);

            function revealText() {
    			text.split('').forEach((char, index) => {
        			if (char === ' ') {
            			const space = document.createElement('span');
            			space.classList.add('space');
            			textContainer.appendChild(space);
        			} else {
            			const span = document.createElement('span');
            			span.textContent = char;
            			span.classList.add('letter');
            			textContainer.appendChild(span);

            			setTimeout(() => {
                		span.style.opacity = '1';
                		span.style.transform = 'translateY(0)';
            			}, 100 * index);
        			}
    			});
			}
        });
    </script>


   


	
<p></p>

   </body>

 </html>
